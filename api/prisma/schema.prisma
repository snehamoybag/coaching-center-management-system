generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  passwordHash  String
  firstName     String       @db.VarChar(35)
  lastName      String       @db.VarChar(35)
  contactNumber String       @unique @db.VarChar(10)
  role          UserRole     @default(TEACHER)
  status        ActiveStatus @default(ACTIVE)
  registeredAt  DateTime     @default(now())

  batches              Batch[]
  recordedAttencdances StudentAttendance[]

  @@index([email, contactNumber])
}

model Student {
  id            String       @id @default(uuid())
  firstName     String       @db.VarChar(35)
  lastName      String       @db.VarChar(35)
  dateOfBirth   String       @db.VarChar(10) // dd/mm/yyyy format
  parentName    String       @db.VarChar(75)
  contactNumber String       @db.VarChar(10)
  aadhaarNumber String       @unique @db.VarChar(12)
  registeredAt  DateTime     @default(now())
  status        ActiveStatus @default(ACTIVE)

  batches     Batch[]
  attendances StudentAttendance[]
  fees        StudentFee[]
  payments    StudentPayment[]

  @@index([aadhaarNumber])
}

model Batch {
  id   String @id @default(uuid())
  name String @unique @db.VarChar(255)

  teachers    User[]
  students    Student[]
  attendances StudentAttendance[]
}

model StudentAttendance {
  id   String   @id @default(uuid())
  date DateTime @default(now())

  batch   Batch  @relation(fields: [batchId], references: [id])
  batchId String

  presentStudents Student[]

  recorder   User   @relation(fields: [recorderId], references: [id])
  recorderId String
}

model StudentFee {
  id     String @id @default(uuid())
  amount Int

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  payment StudentPayment?
}

model StudentPayment {
  id     String      @id @default(uuid())
  amount Int
  date   DateTime    @default(now())
  mode   PaymentMode

  fee   StudentFee @relation(fields: [feeId], references: [id])
  feeId String     @unique

  student   Student @relation(fields: [studentId], references: [id])
  studentId String
}

enum UserRole {
  ADMIN
  TEACHER
}

enum ActiveStatus {
  ACTIVE
  INACTIVE
}

enum PaymentMode {
  BANK
  CASH
  UPI
}
